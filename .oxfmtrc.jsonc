{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "singleQuote": true,
  "experimentalSortImports": {
    "newlinesBetween": false,
  },
  "experimentalSortPackageJson": {
    "sortScripts": true,
  },
  "ignorePatterns": [
    "coverage/",
    "dist/",
    "index.html",
    "pnpm-lock.yaml",
    "src/__generated__/",
    "src/translations/",
    "styled-system/",
  ],
}
