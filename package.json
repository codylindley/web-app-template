{
  "name": "@nkzw/web-app-template",
  "version": "0.0.1",
  "author": "Christoph Nakazawa <christoph.pojer@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/nkzw-tech/web-app-template.git"
  },
  "type": "module",
  "scripts": {
    "build": "panda codegen --silent && vite build",
    "dev": "vite dev",
    "format": "oxfmt",
    "lint": "oxlint .",
    "lint:format": "oxfmt --check",
    "panda:codegen": "panda codegen",
    "preinstall": "command -v git >/dev/null 2>&1 && git config core.hooksPath git-hooks || exit 0",
    "prepare": "panda codegen --silent",
    "test": "npm-run-all --parallel tsc:check vitest:run lint lint:format",
    "tsc:check": "tsgo",
    "vitest:run": "vitest run"
  },
  "dependencies": {
    "@nkzw/define-env": "^1.1.0",
    "@solidjs/router": "^0.15.4",
    "better-auth": "^1.4.18",
    "solid-js": "^1.9.7"
  },
  "devDependencies": {
    "@nkzw/eslint-plugin": "^2.0.0",
    "@nkzw/oxlint-config": "^1.0.1",
    "@pandacss/dev": "^0.54.0",
    "@types/node": "^25.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260212.1",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-perfectionist": "^5.5.0",
    "eslint-plugin-unused-imports": "^4.4.1",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-solid": "^2.11.6",
    "vitest": "^4.0.18"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=23.0.0",
    "pnpm": ">=10.0.0"
  }
}
